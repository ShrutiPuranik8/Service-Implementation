<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>OfbizDemo Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="createOfbizDemo" default-entity-name="OfbizDemo" engine="entity-auto" invoke="create" auth="true">
        <description>
            Create an Ofbiz Demo record
        </description>
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

    <service name="createOfbizDemoByJavaService" default-entity-name="OfbizDemo" engine="java"
             location="com.Apache.ofbizdemo.services.OfbizDemoServices" invoke="createOfbizDemo" auth="true">
        <description>Create an Ofbiz Demo record using a service in Java</description>
        <auto-attributes include="pk" mode="OUT" optional="false" />
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

    <service name="createOfbizDemoByGroovyService" default-entity-name="OfbizDemo" engine="groovy"
             location="component://ofbizDemo/groovyScripts/OfbizDemoServices.groovy" invoke="createOfbizDemo" auth="true">
        <description>Create an Ofbiz Demo record using a service in Groovy</description>
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>


    <service name="CustomerEvent1" engine="java"
             location="com.Apache.ofbizdemo.services.OfbizDemoServices" invoke="CustomerEvent1" auth="true">
        <attribute name="firstName" type="String" mode="IN" optional="true"/>
        <attribute name="lastName" type="String" mode="IN" optional="true"/>
        <attribute name="email" type="String" mode="IN" optional="true"/>
        <attribute name="country" type="String" mode="IN" optional="true"/>
        <attribute name="area" type="String" mode="IN" optional="true"/>
        <attribute name="contact" type="String" mode="IN" optional="true"/>
<!--        <attribute name="address" type="String" mode="IN" optional="true"/>-->
<!--        <attribute name="city" type="String" mode="IN" optional="true"/>-->
<!--        <attribute name="zip" type="String" mode="IN" optional="true"/>-->
<!--        <attribute name="country" type="String" mode="IN" optional="true"/>-->
<!--        <attribute name="state" type="String" mode="IN" optional="true"/>-->

    </service>

<!--    Creating service for create using entity auto -->

    <service name="createEmployee" default-entity-name="Employee" engine="entity-auto" invoke="create" auth="true">
        <description>Create an Employee record</description>
        <auto-attributes include="pk" mode="INOUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

    <service name="createEmployeeByXml" default-entity-name="Employee" engine="simple"
             location="component://ofbizDemo/groovyScripts/OfbizDemoServices.groovy" invoke="createEmployee" auth="true">
        <description>Create an Ofbiz Demo record using a service in Groovy</description>
        <auto-attributes include="pk" mode="INOUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

    <service name="createEmployeeByJava" default-entity-name="Employee" engine="java"
             location="com.Apache.ofbizdemo.services.OfbizDemoServices" invoke="createEmployee" auth="true">
        <description>Create an Employee record using a service in Java</description>
        <auto-attributes include="pk" mode="INOUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

    <service name="createEmployeeByGroovy" default-entity-name="Employee" engine="groovy"
             location="component://ofbizDemo/groovyScripts/OfbizDemoServices.groovy" invoke="createEmployee" auth="true">
        <description>Create an Employee record using a service in Groovy</description>
        <auto-attributes include="pk" mode="INOUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

</services>